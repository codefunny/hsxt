<assembly>
	<id>bin</id>
	<formats>
		<format>zip</format>
	</formats>
	<dependencySets>
		<dependencySet>
			<useProjectArtifact>true</useProjectArtifact>
			<outputDirectory>lib</outputDirectory>
		</dependencySet>
	</dependencySets>
	<fileSets>
		<fileSet>
			<directory>src/main/bin</directory>
			<outputDirectory>/</outputDirectory>
			<includes>
				<include>run.bat</include>
				<include>run.sh</include>
				<include>stop.sh</include>
				<include>Readme.txt</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>src/main/libext</directory>
			<outputDirectory>/libext</outputDirectory>
			<includes>
				<include>DesForJava.dll</include>
				<include>libDesForJava.so</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>src/main/resources</directory>
			<outputDirectory>/config</outputDirectory>
			<includes>
				<include>hazelcast-client.xml</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>src/main/resources/config</directory>
			<outputDirectory>/config</outputDirectory>
			<includes>
				<include>keyserver.properties</include>
			</includes>
		</fileSet>
	</fileSets>
</assembly>
