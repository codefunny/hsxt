<assembly>
	<id>bin</id>
	<formats>
		<format>zip</format>
	</formats>
	<dependencySets>
		<dependencySet>
			<useProjectArtifact>true</useProjectArtifact>
			<outputDirectory>lib</outputDirectory>
		</dependencySet>
	</dependencySets>

	<fileSets>
		 <fileSet>
            <directory>src/main/bin</directory>
            <outputDirectory>/</outputDirectory>
        </fileSet>
		<fileSet>
			<directory>src/script/resources</directory>
			<outputDirectory>/</outputDirectory>
			<includes>
				<include>run.bat</include>
				<include>run.sh</include>
				<include>stop.sh</include>
				<include>readme.txt</include>
			</includes>
		</fileSet>	
		<fileSet>
			<directory>conf/hsxt-pos</directory>
			<outputDirectory>/conf/hsxt-pos</outputDirectory>
			<includes>
				<include>*.properties</include>
			</includes>
		</fileSet>
		
	</fileSets>
</assembly>
